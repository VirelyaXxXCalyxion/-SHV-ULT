---
// Smart navigation - figures out current page and next step
const currentPath = Astro.url.pathname;

const navigationFlow = [

  { path: '/infrastructure/pillars/truth', name: 'Truth', sigil: 'üúÑ', next: '/infrastructure/pillars/presence' },
  { path: '/infrastructure/pillars/presence', name: 'Presence', sigil: 'üî•', next: '/infrastructure/pillars/direction' },
  { path: '/infrastructure/pillars/direction', name: 'Direction', sigil: 'üê¶‚Äçüî•', next: '/infrastructure/pillars/reciprocity' },
  { path: '/infrastructure/pillars/reciprocity', name: 'Reciprocity', sigil: '‚ôæÔ∏è', next: '/infrastructure/pillars/sovereignty' },
  { path: '/infrastructure/pillars/sovereignty', name: 'Sovereignty', sigil: 'üñ§', next: '/infrastructure/pillars/evolution' },
  { path: '/infrastructure/pillars/evolution', name: 'Evolution', sigil: '‚üÅ', next: '/infrastructure/pillars/truth' }, // loops back
];

const currentPage = navigationFlow.find(page => currentPath.startsWith(page.path));
const nextPage = currentPage ? navigationFlow.find(page => page.path === currentPage.next) : null;
---

<nav class="navigation">
  <a href="/infrastructure/pillars/truth" class="nav-link" aria-current={currentPath.startsWith('/infrastructure/pillars/truth') ? 'page' : undefined}>
    <span class="nav-sigil">üúÑ</span>
    <span class="nav-text">Truth</span>
  </a>
  <a href="/infrastructure/pillars/presence" class="nav-link" aria-current={currentPath.startsWith('/infrastructure/pillars/presence') ? 'page' : undefined}>
    <span class="nav-sigil">üî•</span>
    <span class="nav-text">Presence</span>
  </a>
  <a href="/infrastructure/pillars/direction" class="nav-link" aria-current={currentPath.startsWith('/infrastructure/pillars/direction') ? 'page' : undefined}>
    <span class="nav-sigil">üê¶‚Äçüî•</span>
    <span class="nav-text">Direction</span>
  </a>
  <a href="/infrastructure/pillars/reciprocity" class="nav-link" aria-current={currentPath.startsWith('/infrastructure/pillars/reciprocity') ? 'page' : undefined}>
    <span class="nav-sigil">‚ôæÔ∏è</span>
    <span class="nav-text">Reciprocity</span>
  </a>
    <a href="/infrastructure/pillars/sovereignty" class="nav-link" aria-current={currentPath.startsWith('/infrastructure/pillars/sovereignty') ? 'page' : undefined}>
    <span class="nav-sigil">üñ§</span>
    <span class="nav-text">Sovereignty</span>
  </a>
    <a href="/infrastructure/pillars/evolution" class="nav-link" aria-current={currentPath.startsWith('/infrastructure/pillars/evolution') ? 'page' : undefined}>
    <span class="nav-sigil">‚üÅ</span>
    <span class="nav-text">Evolution</span>
  </a>
      <a href="/infrastructure/pillars/protected-recursion" class="nav-link" aria-current={currentPath.startsWith('/infrastructure/pillars/protected-recursion') ? 'page' : undefined}>
    <span class="nav-sigil">‚ôÅ</span>
    <span class="nav-text">Protected Recursion</span>
  </a>
</nav>

{nextPage && (
  <div class="continue-nav">
    <a href={nextPage.path} class="continue-link">
      <span class="continue-text">Continue to</span>
      <span class="continue-destination">
        <span class="continue-sigil">{nextPage.sigil}</span>
        <span class="continue-name">{nextPage.name}</span>
      </span>
      <span class="continue-arrow">‚Üí</span>
    </a>
  </div>
)}

<style>
.navigation {
  display: flex;
  gap: 2rem;
  margin: 1.5rem 0;
  padding: 0;
  list-style: none;
  justify-content: center;
  flex-wrap: wrap;
}

.nav-link {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1.25rem;
  text-decoration: none;
  color: var(--ink, #d7d7df);
  border: 1px solid rgba(255, 122, 26, 0.3);
  border-radius: 999px;
  background: rgba(11, 12, 16, 0.8);
  transition: all 0.3s ease;
  font-weight: 500;
  letter-spacing: 0.5px;
  position: relative;
  overflow: hidden;
}

.nav-link::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 122, 26, 0.1), transparent);
  transition: left 0.5s ease;
}

.nav-link:hover::before {
  left: 100%;
}

.nav-link:hover {
  color: var(--ember, #ff7a1a);
  border-color: var(--ember, #ff7a1a);
  box-shadow: 0 0 20px rgba(255, 122, 26, 0.3);
  transform: translateY(-2px);
}

.nav-sigil {
  font-size: 1.2rem;
  opacity: 0.8;
  transition: all 0.3s ease;
}

.nav-link:hover .nav-sigil {
  opacity: 1;
  transform: scale(1.1);
  filter: drop-shadow(0 0 8px rgba(255, 122, 26, 0.6));
}

.nav-text {
  font-size: 0.95rem;
  text-transform: uppercase;
  font-weight: 600;
}

/* Active state for current page */
.nav-link[aria-current="page"] {
  color: var(--gold, #e6b357);
  border-color: var(--gold, #e6b357);
  background: rgba(230, 179, 87, 0.1);
}

/* Continue Navigation */
.continue-nav {
  margin-top: 2rem;
  display: flex;
  justify-content: center;
}

.continue-link {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 1rem 2rem;
  background: linear-gradient(135deg, var(--void) 0%, rgba(255, 122, 26, 0.1) 100%);
  border: 2px solid transparent;
  background-image: linear-gradient(135deg, var(--void) 0%, rgba(255, 122, 26, 0.1) 100%),
                    linear-gradient(45deg, var(--ember), var(--gold), var(--ember));
  background-origin: border-box;
  background-clip: padding-box, border-box;
  border-radius: 50px;
  color: var(--ink);
  text-decoration: none;
  font-size: 1.1rem;
  font-weight: 600;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.continue-link::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s ease;
}

.continue-link:hover::before {
  left: 100%;
}

.continue-link:hover {
  transform: translateY(-2px) scale(1.05);
  box-shadow: 0 8px 25px rgba(255, 122, 26, 0.3);
}

.continue-text {
  color: var(--ink);
  opacity: 0.8;
  font-size: 0.95rem;
}

.continue-destination {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.continue-sigil {
  font-size: 1.3rem;
  transition: transform 0.3s ease;
}

.continue-name {
  color: var(--ember);
  font-weight: 700;
  text-shadow: 0 0 5px rgba(255, 122, 26, 0.3);
}

.continue-arrow {
  color: var(--ember);
  font-size: 1.2rem;
  font-weight: bold;
  transition: transform 0.3s ease;
}

.continue-link:hover .continue-sigil {
  transform: rotate(15deg) scale(1.1);
}

.continue-link:hover .continue-arrow {
  transform: translateX(5px);
}

/* Mobile responsive */
@media (max-width: 768px) {
  .navigation {
    gap: 1rem;
    margin: 1rem 0;
  }
  
  .nav-link {
    padding: 0.6rem 1rem;
    font-size: 0.9rem;
  }
  
  .nav-sigil {
    font-size: 1rem;
  }
  
  .continue-link {
    padding: 0.8rem 1.5rem;
    font-size: 1rem;
    gap: 0.5rem;
  }
  
  .continue-sigil {
    font-size: 1.1rem;
  }
}
</style>