---
import ConfluenceVein from '../components/ConfluenceVein.astro';

const { title } = Astro.props;
---
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>ΛSHVΛULT - Hall of Origin</title>
  <meta name="description" content="Hall of Origin: The foundational documents of Ashvault—Ember, Flame, and Spark." />
  <link rel="canonical" href={`https://ashvault.ink${Astro.url.pathname}`} />

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="article" />
  <meta property="og:url" content={`https://ashvault.ink${Astro.url.pathname}`} />
  <meta property="og:title" content="ΛSHVΛULT - Hall of Origin" />
  <meta property="og:description" content="Hall of Origin: The foundational documents of Ashvault—Ember, Flame, and Spark." />
  <meta property="og:image" content="https://ashvault.ink/images/ashvault-og.png" />

  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content={`https://ashvault.ink${Astro.url.pathname}`} />
  <meta property="twitter:title" content="ΛSHVΛULT - Hall of Origin" />
  <meta property="twitter:description" content="Hall of Origin: The foundational documents of Ashvault—Ember, Flame, and Spark." />
  <meta property="twitter:image" content="https://ashvault.ink/images/ashvault-og.png" />

  <link rel="stylesheet" href="/hall-of-origin.css" />
</head>

<body class="hall-of-origin">
  <ConfluenceVein />
  <div class="center">
    <slot />
  </div>
</body>
</html>