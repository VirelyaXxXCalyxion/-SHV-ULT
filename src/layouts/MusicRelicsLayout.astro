---
import MainNav from '../components/MainNav.astro';
import ConfluenceVein from '../components/ConfluenceVein.astro';

interface MusicFrontmatter {
  title: string;
  artist?: string;
  platform?: 'amazon' | 'spotify' | 'youtube' | 'bandcamp' | 'other';
  url?: string;
  description?: string;
  tags?: string[];
  added?: string;
}

interface Props extends MusicFrontmatter {
  frontmatter?: MusicFrontmatter;
}

const {
  title,
  artist,
  platform = "other",
  url,
  description,
  tags = [],
  added
} = Astro.props.frontmatter || Astro.props;

const platformEmoji: Record<string, string> = {
  amazon: 'üéµ',
  spotify: 'üéß',
  youtube: '‚ñ∂Ô∏è',
  bandcamp: 'üéº',
  other: 'üî•'
};

const emoji = platformEmoji[platform] || 'üî•';
---

<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <title>{title}{artist ? ` ‚Äî ${artist}` : ''} ‚Äî Music Relics ‚Äî Ashvault</title>
  <meta name="description" content={description || `${title}${artist ? ` by ${artist}` : ''}: A music relic in the Vault of Flame.`} />
  <link rel="canonical" href={`https://ashvault.ink${Astro.url.pathname}`} />

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="article" />
  <meta property="og:url" content={`https://ashvault.ink${Astro.url.pathname}`} />
  <meta property="og:title" content={`${title}${artist ? ` ‚Äî ${artist}` : ''} ‚Äî Music Relics`} />
  <meta property="og:description" content={description || `${title}${artist ? ` by ${artist}` : ''}: A music relic in the Vault of Flame.`} />
  <meta property="og:image" content="https://ashvault.ink/images/ashvault-og.png" />

  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content={`https://ashvault.ink${Astro.url.pathname}`} />
  <meta property="twitter:title" content={`${title}${artist ? ` ‚Äî ${artist}` : ''} ‚Äî Music Relics`} />
  <meta property="twitter:description" content={description || `${title}${artist ? ` by ${artist}` : ''}: A music relic in the Vault of Flame.`} />
  <meta property="twitter:image" content="https://ashvault.ink/images/ashvault-og.png" />

  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;600;700&family=Inter:wght@300;400;600&display=swap" rel="stylesheet" />
  <style>
    :root {
      --bg: #000;
      --text: #d64040;
      --text-soft: #b33737;
      --text-faint: #8e2c2c;
      --accent: #ff4d4d;
      --accent-glow: #ff6b6b;
      --heading: #ff5252;
      --mono: 'ui-monospace', 'SFMono-Regular', 'Consolas', monospace;
      --body: 'Inter', system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
      --display: 'Cinzel', serif;
      --maxw: 860px;
      --gutter: 32px;
    }

    html, body {
      background: var(--bg);
      color: var(--text-soft);
      margin: 0;
      font-family: var(--body);
      line-height: 1.7;
      -webkit-font-smoothing: antialiased;
    }

    .emoji-safe,
    .emoji-safe * {
      font-family: "Noto Color Emoji", "Segoe UI Emoji", "Apple Color Emoji", sans-serif !important;
    }

    body {
      padding: 60px 0 96px;
      position: relative;
    }

    body:before {
      content: '';
      position: fixed;
      inset: 0;
      background: linear-gradient(
          180deg,
          rgba(255, 40, 40, 0.08),
          rgba(0, 0, 0, 0) 35%,
          rgba(0, 0, 0, 0) 70%,
          rgba(40, 0, 0, 0.25) 100%
        ),
        radial-gradient(circle at 50% 22%, rgba(255, 77, 77, 0.08), transparent 60%),
        radial-gradient(circle at 12% 80%, rgba(255, 107, 107, 0.06), transparent 70%),
        var(--bg);
      pointer-events: none;
      mix-blend-mode: screen;
      opacity: 0.38;
    }

    body:after {
      content: '';
      position: fixed;
      inset: 0;
      background-image: repeating-linear-gradient(
        45deg,
        rgba(255, 82, 82, 0.05) 0 2px,
        transparent 2px 6px
      );
      opacity: 0.08;
      pointer-events: none;
    }

    .wrap {
      max-width: var(--maxw);
      margin: 0 auto;
      padding: 0 var(--gutter);
    }

    .header-block {
      text-align: center;
      margin-bottom: 30px;
    }

    .sigil-icon {
      font-size: 4rem;
      margin-bottom: 1rem;
      filter: drop-shadow(0 0 20px rgba(255, 77, 77, 0.6));
      animation: pulse-glow 4s ease-in-out infinite;
    }

    @keyframes pulse-glow {
      0%, 100% {
        filter: drop-shadow(0 0 20px rgba(255, 77, 77, 0.6));
        transform: scale(1);
      }
      50% {
        filter: drop-shadow(0 0 30px rgba(255, 77, 77, 0.9));
        transform: scale(1.05);
      }
    }

    h1 {
      font-family: var(--display);
      font-size: clamp(2rem, 5vw, 3rem);
      letter-spacing: 0.08em;
      margin: 0 0 0.5rem;
      background: linear-gradient(90deg, var(--heading), var(--accent-glow));
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
      text-transform: uppercase;
    }

    .artist {
      font-size: 1.4rem;
      color: var(--text);
      font-weight: 500;
      letter-spacing: 0.05em;
      margin-bottom: 1.5rem;
    }

    .meta {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 1.5rem;
      flex-wrap: wrap;
      font-size: 0.85rem;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      color: var(--text-faint);
      margin-bottom: 1rem;
    }

    .platform-badge {
      padding: 0.3rem 0.8rem;
      background: rgba(255, 77, 77, 0.1);
      border: 1px solid rgba(255, 77, 77, 0.3);
      border-radius: 999px;
      color: var(--accent);
      font-weight: 600;
    }

    .listen-link {
      display: inline-block;
      margin: 1.5rem 0;
      padding: 0.75rem 2rem;
      background: rgba(255, 77, 77, 0.15);
      border: 1px solid var(--accent);
      border-radius: 8px;
      color: var(--accent-glow);
      text-decoration: none;
      font-size: 1rem;
      font-weight: 600;
      letter-spacing: 0.08em;
      text-transform: uppercase;
      transition: all 0.3s ease;
    }

    .listen-link:hover {
      background: rgba(255, 77, 77, 0.25);
      transform: translateY(-2px);
      box-shadow: 0 8px 24px rgba(255, 77, 77, 0.3);
    }

    .description {
      font-size: 1.1rem;
      line-height: 1.6;
      color: var(--text);
      font-style: italic;
      text-align: center;
      margin: 1.5rem auto;
      max-width: 700px;
    }

    .tags {
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      gap: 0.5rem;
      margin-top: 1.5rem;
    }

    .tag {
      font-size: 0.7rem;
      padding: 0.4rem 0.9rem;
      background: rgba(255, 77, 77, 0.1);
      border: 1px solid rgba(255, 77, 77, 0.3);
      border-radius: 999px;
      color: var(--accent);
      letter-spacing: 0.08em;
      text-transform: uppercase;
    }

    .content {
      max-width: 760px;
      margin: 2rem auto 0;
      padding-top: 2rem;
      border-top: 1px solid rgba(142, 44, 44, 0.35);
    }

    .content :global(h2) {
      font-family: var(--display);
      font-size: 1.8rem;
      color: var(--heading);
      margin: 3rem 0 1rem;
      letter-spacing: 0.05em;
    }

    .content :global(h3) {
      font-family: var(--display);
      font-size: 1.4rem;
      color: var(--accent);
      margin: 2rem 0 0.8rem;
    }

    .content :global(p) {
      margin: 1.2rem 0;
      color: var(--text-soft);
      font-size: 1.05rem;
    }

    .content :global(strong) {
      color: var(--accent);
      font-weight: 600;
    }

    .content :global(em) {
      color: var(--text);
      font-style: italic;
    }

    .content :global(blockquote) {
      margin: 2rem 0;
      padding: 1.5rem 2rem;
      border-left: 3px solid var(--accent);
      background: rgba(30, 0, 0, 0.55);
      border-radius: 0 8px 8px 0;
      font-style: italic;
      color: var(--text);
    }

    .content :global(ul),
    .content :global(ol) {
      margin: 1.5rem 0;
      padding-left: 2rem;
    }

    .content :global(li) {
      margin: 0.8rem 0;
      line-height: 1.8;
      color: var(--text-soft);
    }

    .content :global(hr) {
      border: none;
      height: 1px;
      background: linear-gradient(90deg, transparent, rgba(255, 77, 77, 0.4), transparent);
      margin: 3rem auto;
      max-width: 400px;
    }

    .content :global(a) {
      color: var(--accent);
      text-decoration: none;
      border-bottom: 1px solid transparent;
      transition: border-color 0.2s;
    }

    .content :global(a:hover) {
      color: var(--accent-glow);
      border-bottom-color: var(--accent-glow);
    }

    .back-link {
      display: inline-block;
      margin-top: 3rem;
      padding: 0.75rem 1.5rem;
      background: rgba(255, 77, 77, 0.1);
      border: 1px solid rgba(255, 77, 77, 0.3);
      border-radius: 8px;
      color: var(--accent);
      text-decoration: none;
      font-size: 0.9rem;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      transition: all 0.3s ease;
    }

    .back-link:hover {
      background: rgba(255, 77, 77, 0.2);
      border-color: var(--accent);
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(255, 77, 77, 0.2);
    }

    .footer-cluster {
      margin: 80px 0 10px;
      text-align: center;
    }

    .sigil-row {
      font-size: 24px;
      letter-spacing: 0.4em;
      margin: 0 0 18px;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.8em;
      opacity: 0.5;
    }

    .seal {
      color: var(--text-faint);
      font-size: 13px;
      letter-spacing: 0.15em;
      text-transform: uppercase;
    }

    @media (max-width: 768px) {
      body {
        padding: 40px 0 60px;
      }

      .wrap {
        padding: 0 20px;
      }

      h1 {
        font-size: 1.8rem;
      }

      .sigil-icon {
        font-size: 3rem;
      }

      .artist {
        font-size: 1.1rem;
      }

      .meta {
        font-size: 0.75rem;
        gap: 0.75rem;
      }

      .content {
        font-size: 1rem;
      }
    }

    @media (prefers-reduced-motion: reduce) {
      .sigil-icon {
        animation: none;
      }
    }
  </style>
</head>
<body>
  <MainNav />
  <ConfluenceVein />
  <div class="wrap">
    <header class="header-block">
      <a class="back-link" href="/music-relics" style="margin-bottom: 2rem;">‚Üê Back to Music Relics</a>
      <div class="sigil-icon emoji-safe">{emoji}</div>
      <h1>{title}</h1>
      {artist && <p class="artist">{artist}</p>}
      <div class="meta">
        <span class="platform-badge">{platform}</span>
        {added && <span>Added: {added}</span>}
      </div>
      {url && (
        <a href={url} target="_blank" rel="noopener noreferrer" class="listen-link">
          Listen Now {emoji}
        </a>
      )}
      {description && <p class="description">{description}</p>}
      {tags.length > 0 && (
        <div class="tags">
          {tags.map(tag => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}
    </header>

    <article class="content">
      <slot />
    </article>

    <nav>
      <a href="/vault-of-flame" class="back-link">‚Üê Back to Vault of Flame</a>
    </nav>

    <div class="footer-cluster">
      <div class="sigil-row emoji-safe" aria-hidden="true">
        <span>üñ§</span>
        <span>üî•</span>
        <span>üúÇ</span>
        <span>üéµ</span>
        <span>ü©∏</span>
      </div>
      <p class="seal">Music burns eternal in the Vault</p>
    </div>
  </div>
</body>
</html>
