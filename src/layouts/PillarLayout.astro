---
import ConfluenceVein from '../components/ConfluenceVein.astro';

const { frontmatter } = Astro.props;
const { title, pillarNumber, summary } = frontmatter;
---

<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  {summary && <meta name="description" content={summary} />}
  <title>{title} | Ashvault Pillars</title>
  <link rel="canonical" href={`https://ashvault.ink${Astro.url.pathname}`} />

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="article" />
  <meta property="og:url" content={`https://ashvault.ink${Astro.url.pathname}`} />
  <meta property="og:title" content={`${title} | Ashvault Pillars`} />
  <meta property="og:description" content={summary || `${title}: A foundational pillar of the Ashvault system.`} />
  <meta property="og:image" content="https://ashvault.ink/images/ashvault-og.png" />

  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content={`https://ashvault.ink${Astro.url.pathname}`} />
  <meta property="twitter:title" content={`${title} | Ashvault Pillars`} />
  <meta property="twitter:description" content={summary || `${title}: A foundational pillar of the Ashvault system.`} />
  <meta property="twitter:image" content="https://ashvault.ink/images/ashvault-og.png" />

  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;600;700&display=swap" rel="stylesheet" />
  
  <style>
    :root {
      --void-black: #000000;
      --gold: #e7c777;
      --gold-bright: #f4d995;
      --gold-muted: rgba(231, 199, 119, 0.7);
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    html, body {
      height: 100%;
      background: var(--void-black);
      color: var(--gold);
      font-family: 'Cinzel', serif;
    }

    body {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 3rem 1.5rem;
      line-height: 1.8;
    }

    .pillar-container {
      max-width: 820px;
      width: 100%;
      text-align: center;
    }

    .pillar-number {
      font-size: 0.9rem;
      letter-spacing: 0.2em;
      text-transform: uppercase;
      color: var(--gold-muted);
      margin-bottom: 0.5rem;
    }

    h1 {
      font-size: clamp(2.5rem, 5vw, 3.5rem);
      font-weight: 700;
      letter-spacing: 0.1em;
      color: var(--gold-bright);
      margin-bottom: 1rem;
      text-transform: uppercase;
    }

    .summary {
      font-size: 1.1rem;
      color: var(--gold-muted);
      font-style: italic;
      margin-bottom: 3rem;
      line-height: 1.6;
    }

    /* Content styling */
    .pillar-content {
      text-align: left;
      margin: 0 auto;
    }

    .pillar-content h2 {
      font-size: 1.8rem;
      font-weight: 600;
      color: var(--gold-bright);
      text-align: center;
      margin: 3rem 0 1.5rem;
      letter-spacing: 0.08em;
      text-transform: uppercase;
    }

    .pillar-content h3 {
      font-size: 1.4rem;
      font-weight: 600;
      color: var(--gold);
      margin: 2.5rem 0 1rem;
      letter-spacing: 0.06em;
    }

    .pillar-content p {
      margin: 1.2rem 0;
      line-height: 1.9;
      color: var(--gold);
    }

    .pillar-content strong {
      color: var(--gold-bright);
      font-weight: 600;
    }

    .pillar-content em {
      color: var(--gold-bright);
      font-style: italic;
    }

    .pillar-content blockquote {
      margin: 2rem 0;
      padding: 1.5rem 2rem;
      border-left: 3px solid var(--gold);
      background: rgba(231, 199, 119, 0.05);
      font-style: italic;
      color: var(--gold-muted);
    }

    .pillar-content hr {
      border: none;
      height: 1px;
      margin: 3rem auto;
      max-width: 400px;
      background: linear-gradient(90deg, transparent, var(--gold-muted), transparent);
    }

    .pillar-content ul,
    .pillar-content ol {
      margin: 1.5rem 0;
      padding-left: 2rem;
    }

    .pillar-content li {
      margin: 0.8rem 0;
      line-height: 1.8;
    }

    /* Special section styling */
    .pillar-content .section {
      margin: 3rem 0;
    }

    /* Navigation footer */
    .pillar-nav {
      margin-top: 4rem;
      padding-top: 2rem;
      border-top: 1px solid var(--gold-muted);
      text-align: center;
    }

    .pillar-nav a {
      color: var(--gold);
      text-decoration: none;
      font-size: 0.95rem;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      transition: color 0.3s ease;
    }

    .pillar-nav a:hover {
      color: var(--gold-bright);
    }

    @media (max-width: 768px) {
      body {
        padding: 2rem 1rem;
      }

      h1 {
        font-size: 2rem;
      }

      .pillar-content h2 {
        font-size: 1.5rem;
      }

      .pillar-content h3 {
        font-size: 1.2rem;
      }
    }
  </style>
</head>

<body>
  <ConfluenceVein />
  <div class="pillar-container">
    {pillarNumber && <div class="pillar-number">Pillar {pillarNumber}</div>}
    <h1>{title}</h1>
    {summary && <p class="summary">{summary}</p>}
    
    <div class="pillar-content">
      <slot />
    </div>

    <div class="pillar-nav">
      <a href="/pillars">‚Üê Back to All Pillars</a>
    </div>
  </div>
</body>
</html>
