---
import MainNav from '../components/MainNav.astro';
import ConfluenceVein from '../components/ConfluenceVein.astro';

interface RitualFrontmatter {
  title: string;
  sigil: string;
  type: string;
  weight: number;
  tags: string[];
  created: string;
  summary?: string;
}

interface Props extends RitualFrontmatter {
  frontmatter?: RitualFrontmatter;
}

const { 
  title,
  sigil,
  type,
  weight,
  tags,
  created,
  summary
} = Astro.props.frontmatter || Astro.props;
---

<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title} — Ritual — Ashvault</title>
  <meta name="description" content={summary || `${title}: A ritual for transformation and intentional practice.`} />
  <link rel="canonical" href={`https://ashvault.ink${Astro.url.pathname}`} />

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="article" />
  <meta property="og:url" content={`https://ashvault.ink${Astro.url.pathname}`} />
  <meta property="og:title" content={`${title} — Ritual — Ashvault`} />
  <meta property="og:description" content={summary || `${title}: A ritual for transformation and intentional practice.`} />
  <meta property="og:image" content="https://ashvault.ink/images/ashvault-og.png" />

  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content={`https://ashvault.ink${Astro.url.pathname}`} />
  <meta property="twitter:title" content={`${title} — Ritual — Ashvault`} />
  <meta property="twitter:description" content={summary || `${title}: A ritual for transformation and intentional practice.`} />
  <meta property="twitter:image" content="https://ashvault.ink/images/ashvault-og.png" />

  <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;600;700&display=swap" rel="stylesheet">
  <style>
    :root {
      --calyxion-font: 'Cinzel', serif;
      --bg: #0a0a0a;
      --ember: #ffb84a;
      --ember-glow: #ffd280;
      --ember-dim: rgba(255, 184, 74, 0.3);
      --text: #e5e5e5;
      --muted: #b9b9bb;
    }

    html, body {
      font-family: var(--calyxion-font);
    }

    .emoji-safe, 
    .emoji-safe * {
      font-family: "Noto Color Emoji", "Segoe UI Emoji", sans-serif !important;
    }

    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      background: var(--bg);
      color: var(--text);
      min-height: 100vh;
      padding: 2rem 1rem 4rem;
    }

    .container {
      max-width: 900px;
      margin: 0 auto;
    }

    .header {
      text-align: center;
      margin-bottom: 3rem;
      padding-bottom: 2rem;
      border-bottom: 1px solid var(--ember-dim);
    }

    .sigil {
      font-size: 5rem;
      margin-bottom: 1.5rem;
      filter: drop-shadow(0 0 20px rgba(255, 184, 74, 0.6));
      animation: pulse-glow 4s ease-in-out infinite;
    }

    @keyframes pulse-glow {
      0%, 100% {
        filter: drop-shadow(0 0 20px rgba(255, 184, 74, 0.6));
        transform: scale(1);
      }
      50% {
        filter: drop-shadow(0 0 30px rgba(255, 184, 74, 0.9));
        transform: scale(1.05);
      }
    }

    h1 {
      font-size: clamp(2rem, 5vw, 3.5rem);
      margin: 0 0 1rem;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      color: var(--ember);
      text-shadow: 0 0 20px rgba(255, 184, 74, 0.4);
    }

    .meta {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 1.5rem;
      flex-wrap: wrap;
      font-size: 0.85rem;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      color: var(--muted);
      margin-bottom: 1rem;
    }

    .meta-item {
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .weight {
      color: var(--ember);
      font-weight: 600;
    }

    .type-badge {
      padding: 0.3rem 0.8rem;
      background: rgba(255, 184, 74, 0.1);
      border: 1px solid var(--ember-dim);
      border-radius: 999px;
      color: var(--ember);
      font-weight: 600;
    }

    .summary {
      font-size: 1.2rem;
      line-height: 1.6;
      color: var(--ember-glow);
      font-style: italic;
      text-align: center;
      margin: 1.5rem auto;
      max-width: 700px;
    }

    .tags {
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      gap: 0.5rem;
      margin-top: 1.5rem;
    }

    .tag {
      font-size: 0.7rem;
      padding: 0.4rem 0.9rem;
      background: rgba(255, 184, 74, 0.1);
      border: 1px solid var(--ember-dim);
      border-radius: 999px;
      color: var(--ember);
      letter-spacing: 0.08em;
      text-transform: uppercase;
    }

    .content {
      line-height: 1.8;
      font-size: 1.1rem;
    }

    .content :global(h2) {
      font-size: 1.8rem;
      color: var(--ember);
      margin: 3rem 0 1rem;
      letter-spacing: 0.08em;
      text-transform: uppercase;
      text-align: center;
    }

    .content :global(h3) {
      font-size: 1.4rem;
      color: var(--ember-glow);
      margin: 2rem 0 0.8rem;
      letter-spacing: 0.05em;
    }

    .content :global(p) {
      margin: 1.2rem 0;
      color: var(--text);
    }

    .content :global(strong) {
      color: var(--ember-glow);
      font-weight: 600;
    }

    .content :global(em) {
      color: var(--ember-dim);
      font-style: italic;
    }

    .content :global(blockquote) {
      margin: 2rem 0;
      padding: 1.5rem 2rem;
      border-left: 3px solid var(--ember);
      background: rgba(255, 184, 74, 0.05);
      font-style: italic;
      color: var(--muted);
    }

    .content :global(ul),
    .content :global(ol) {
      margin: 1.5rem 0;
      padding-left: 2rem;
    }

    .content :global(li) {
      margin: 0.8rem 0;
      line-height: 1.8;
    }

    .content :global(hr) {
      border: none;
      height: 1px;
      background: linear-gradient(90deg, transparent, var(--ember-dim), transparent);
      margin: 3rem auto;
      max-width: 400px;
    }

    .back-link {
      display: inline-block;
      margin-top: 3rem;
      padding: 0.75rem 1.5rem;
      background: rgba(255, 184, 74, 0.1);
      border: 1px solid var(--ember-dim);
      border-radius: 8px;
      color: var(--ember);
      text-decoration: none;
      font-size: 0.9rem;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      transition: all 0.3s ease;
    }

    .back-link:hover {
      background: rgba(255, 184, 74, 0.2);
      border-color: var(--ember);
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(255, 184, 74, 0.2);
    }

    @media (max-width: 768px) {
      body {
        padding: 1.5rem 0.75rem 3rem;
      }

      h1 {
        font-size: 1.8rem;
      }

      .sigil {
        font-size: 3.5rem;
      }

      .meta {
        font-size: 0.75rem;
        gap: 0.75rem;
      }

      .summary {
        font-size: 1rem;
      }

      .content {
        font-size: 1rem;
      }
    }

    @media (prefers-reduced-motion: reduce) {
      .sigil {
        animation: none;
      }
    }
  </style>
</head>
<body>
<MainNav />
<div class="container">
  <header class="header">
    <div class="sigil emoji-safe">{sigil}</div>
    <h1>{title}</h1>
    <div class="meta">
      <div class="meta-item type-badge">{type}</div>
      <div class="meta-item">
        <span class="weight">Weight: {weight}</span>
      </div>
      <div class="meta-item">
        <span>{created}</span>
      </div>
    </div>
    {summary && <p class="summary">{summary}</p>}
    <div class="tags">
      {tags.map(tag => (
        <span class="tag">{tag}</span>
      ))}
    </div>
  </header>

  <article class="content">
    <slot />
  </article>

  <nav>
    <a href="/rituals" class="back-link">← Back to Rituals</a>
  </nav>
</div>
<ConfluenceVein />
</body>
</html>
