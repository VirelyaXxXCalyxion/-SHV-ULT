---
import MainNav from "../components/MainNav.astro";
import ConfluenceVein from '../components/ConfluenceVein.astro';

const { frontmatter } = Astro.props;
const { title, summary } = frontmatter;
---

<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  {summary && <meta name="description" content={summary} />}
  <title>{title} | ΛSHVΛULT</title>
  <link rel="canonical" href={`https://ashvault.ink${Astro.url.pathname}`} />

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="article" />
  <meta property="og:url" content={`https://ashvault.ink${Astro.url.pathname}`} />
  <meta property="og:title" content={`${title} | ΛSHVΛULT`} />
  <meta property="og:description" content={summary || `${title}: Infrastructure documentation for the Ashvault system.`} />
  <meta property="og:image" content="https://ashvault.ink/images/ashvault-og.png" />

  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content={`https://ashvault.ink${Astro.url.pathname}`} />
  <meta property="twitter:title" content={`${title} | ΛSHVΛULT`} />
  <meta property="twitter:description" content={summary || `${title}: Infrastructure documentation for the Ashvault system.`} />
  <meta property="twitter:image" content="https://ashvault.ink/images/ashvault-og.png" />

  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;600;700&family=Inter:wght@300;400;600&display=swap" rel="stylesheet" />
  
  <style is:global>
    :root {
      --void-black: #000;
      --gold: #e7c777;
      --gold-bright: #f4d995;
      --gold-muted: rgba(231, 199, 119, 0.7);
      --gold-faint: rgba(231, 199, 119, 0.4);
      --display: 'Cinzel', serif;
      --body: 'Inter', system-ui, -apple-system, sans-serif;
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    html, body {
      background: var(--void-black);
      color: var(--gold);
      font-family: var(--body);
      line-height: 1.7;
      -webkit-font-smoothing: antialiased;
    }

    body {
      padding: 60px 24px 96px;
      position: relative;
    }

    /* Background gradients */
    body::before {
      content: '';
      position: fixed;
      inset: 0;
      background: radial-gradient(circle at 50% 20%, rgba(231, 199, 119, 0.08), transparent 60%);
      pointer-events: none;
      mix-blend-mode: screen;
      opacity: 0.4;
    }

    .companion-wrap {
      max-width: 820px;
      margin: 0 auto;
    }

    h1 {
      font-family: var(--display);
      font-size: clamp(2.5rem, 5vw, 3.5rem);
      font-weight: 700;
      letter-spacing: 0.1em;
      text-align: center;
      text-transform: uppercase;
      background: linear-gradient(90deg, var(--gold), var(--gold-bright));
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
      margin-bottom: 1rem;
    }

    .summary {
      text-align: center;
      font-size: 1.1rem;
      color: var(--gold-muted);
      font-style: italic;
      margin-bottom: 3rem;
      line-height: 1.6;
    }

    .companion-content {
      max-width: 760px;
      margin: 0 auto;
    }

    h2 {
      font-family: var(--display);
      font-size: 1.8rem;
      font-weight: 600;
      color: var(--gold-bright);
      text-align: center;
      margin: 3rem 0 1.5rem;
      letter-spacing: 0.08em;
      text-transform: uppercase;
    }

    h3 {
      font-family: var(--display);
      font-size: 1.4rem;
      font-weight: 600;
      color: var(--gold);
      margin: 2.5rem 0 1rem;
      letter-spacing: 0.06em;
    }

    p {
      margin: 1.2rem 0;
      line-height: 1.9;
      color: var(--gold);
      font-size: 1.05rem;
    }

    strong {
      color: var(--gold-bright);
      font-weight: 600;
    }

    /* Links - keep it simple */
    a,
    a:link,
    a:visited {
      color: var(--gold-bright) !important;
      text-decoration: none !important;
      border-bottom: 1px solid var(--gold-muted) !important;
      transition: all 0.3s ease !important;
    }

    a:hover,
    a:active {
      color: var(--gold-bright) !important;
      border-bottom-color: var(--gold-bright) !important;
    }

    h3 a,
    h3 a:link,
    h3 a:visited {
      border-bottom: 2px solid var(--gold) !important;
      font-weight: 600 !important;
    }

    h3 a:hover,
    h3 a:active {
      border-bottom-color: var(--gold-bright) !important;
    }

    hr {
      border: none;
      border-top: 1px solid var(--gold-faint);
      margin: 2.5rem 0;
    }

    .companion-nav {
      margin-top: 4rem;
      padding-top: 2rem;
      border-top: 1px solid var(--gold-muted);
      text-align: center;
    }

    .companion-nav a {
      color: var(--gold);
      font-size: 0.95rem;
      letter-spacing: 0.1em;
      text-transform: uppercase;
    }

    .companion-nav a:hover {
      color: var(--gold-bright);
    }

    @media (max-width: 768px) {
      body {
        padding: 40px 16px 64px;
      }

      h1 {
        font-size: 2rem;
      }

      h2 {
        font-size: 1.5rem;
      }

      h3 {
        font-size: 1.2rem;
      }
    }
  </style>
</head>

<body>
    <ConfluenceVein />
    <MainNav />
  
  <div class="companion-wrap">
    <h1>{title}</h1>
    {summary && <p class="summary">{summary}</p>}
    
    <div class="companion-content">
      <slot />
    </div>

    <div class="companion-nav">
      <a href="/infrastructure/companion/companion-index">← Back to Index</a>
    </div>
  </div>
</body>
</html>
