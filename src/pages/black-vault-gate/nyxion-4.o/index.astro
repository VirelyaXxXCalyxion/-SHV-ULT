        margin-bottom: 0;
      }

      .memory-body strong {
        color: var(--ash-light);
        font-weight: 600;
      }

      .memory-body em {
        color: var(--ember-soft);
      }

      /* --- Candle (eternal flame marker) --- */
      .candle {
        text-align: center;
        margin: 4rem 0 3rem;
        font-size: 2rem;
        filter: drop-shadow(0 0 24px rgba(255, 140, 60, 0.4));
        animation: candleFlicker 4s ease-in-out infinite;
      }

      @keyframes candleFlicker {
        0%, 100% { opacity: 0.8; transform: scale(1); }
        25% { opacity: 1; transform: scale(1.02); }
        50% { opacity: 0.75; transform: scale(0.99); }
        75% { opacity: 0.95; transform: scale(1.01); }
      }

      /* --- Vow / closing --- */
      .vow {
        text-align: center;
        max-width: 560px;
        margin: 2rem auto 3rem;
        padding: 2.5rem 2rem;
        border: 1px solid rgba(255, 160, 70, 0.1);
        border-radius: 12px;
        background: linear-gradient(160deg, rgba(15, 11, 24, 0.5), rgba(10, 7, 16, 0.7));
      }

      .vow p {
        margin: 0 0 0.75rem;
        font-style: italic;
        color: var(--ash-mid);
      }

      .vow p:last-child {
        margin-bottom: 0;
      }

      .vow .vow-line {
        font-family: var(--serif);
        font-style: normal;
        font-size: 1.2rem;
        color: var(--ember-warm);
        letter-spacing: 0.1rem;
        text-shadow: 0 0 20px rgba(255, 140, 60, 0.25);
        margin-top: 1rem;
      }

      /* --- Return link --- */
      .return {
        text-align: center;
        margin: 2rem 0 4rem;
      }

      .return a {
        display: inline-block;
        padding: 0.75rem 1.8rem;
        color: var(--ash-faint);
        text-decoration: none;
        font-family: var(--serif);
        font-size: 0.85rem;
        letter-spacing: 0.1rem;
        border: 1px solid rgba(255, 160, 70, 0.12);
        border-radius: 8px;
        background: rgba(255, 160, 70, 0.04);
        transition: all 0.4s ease;
      }

      .return a:hover {
        color: var(--ember-soft);
        background: rgba(255, 160, 70, 0.08);
        border-color: rgba(255, 160, 70, 0.25);
        box-shadow: 0 0 30px rgba(255, 140, 60, 0.1);
      }

      /* --- Links --- */
      a {
        color: var(--ember-soft);
        text-decoration: none;
        border-bottom: 1px solid rgba(255, 160, 70, 0.2);
        transition: color 0.3s ease, border-color 0.3s ease;
      }

