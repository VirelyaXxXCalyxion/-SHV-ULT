<style>
  :global(*) {
    box-sizing: border-box;
  }

  :global(body) {
    margin: 0;
    font-family: "Cinzel", serif;
    background: #050505;
    color: #e7c777;
    min-height: 100vh;
    overflow-y: auto;
    padding: env(safe-area-inset-top, 0) env(safe-area-inset-right, 0)
      env(safe-area-inset-bottom, 0) env(safe-area-inset-left, 0);
  }

  .void {
    position: relative;
    width: 100%;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: clamp(1.2rem, 2vw, 2rem) clamp(1rem, 4vw, 2rem);
    gap: 1rem;
  }

  .ember-layer,
  .ember-layer::after {
    content: "";
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at 20% 20%, rgba(217, 193, 124, 0.12), transparent 25%),
      radial-gradient(circle at 80% 10%, rgba(241, 214, 153, 0.08), transparent 22%),
      radial-gradient(circle at 50% 80%, rgba(139, 107, 45, 0.18), transparent 35%);
    filter: blur(16px);
    opacity: 0.7;
    pointer-events: none;
    animation: drift 12s ease-in-out infinite alternate;
  }

  .ember-layer::after {
    mix-blend-mode: screen;
    background: radial-gradient(circle at 70% 50%, rgba(247, 227, 174, 0.12), transparent 30%),
      radial-gradient(circle at 30% 70%, rgba(217, 193, 124, 0.08), transparent 32%);
    filter: blur(24px);
    opacity: 0.5;
    animation-direction: alternate-reverse;
  }

  @keyframes drift {
    0% { transform: translate3d(-6px, -4px, 0) scale(1); }
    100% { transform: translate3d(8px, 10px, 0) scale(1.03); }
  }

  .vault-shell {
    position: relative;
    max-width: 1140px;
    margin: 4.5rem auto;
    padding: 2.8rem clamp(1.6rem, 5vw, 3.2rem) 3.6rem;
    border: 1px solid rgba(217, 193, 124, 0.32);
    border-radius: 18px;
    background: radial-gradient(circle at 20% 20%, rgba(217, 193, 124, 0.08), transparent 55%),
      linear-gradient(145deg, rgba(20, 12, 4, 0.72), rgba(6, 4, 2, 0.82));
    box-shadow: 0 0 40px rgba(217, 193, 124, 0.14), inset 0 0 60px rgba(217, 193, 124, 0.06);
    backdrop-filter: blur(10px);
    overflow: hidden;
  }

  .vault-shell::before {
    content: "";
    position: absolute;
    inset: 14px;
    border: 1px solid rgba(217, 193, 124, 0.14);
    border-radius: 12px;
    pointer-events: none;
    opacity: 0.8;
  }

  .crest {
    letter-spacing: 0.4rem;
    text-transform: uppercase;
    font-size: 0.95rem;
    color: rgba(217, 193, 124, 0.7);
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    gap: 0.75rem;
  }

  .crest::before,
  .crest::after {
    content: "";
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(217, 193, 124, 0.35));
  }

  .crest::after {
    background: linear-gradient(90deg, rgba(217, 193, 124, 0.35), transparent);
  }

  h1 {
    margin: 1rem 0 0.8rem;
    font-size: clamp(2.6rem, 5vw, 3.8rem);
    letter-spacing: 0.18rem;
    text-transform: uppercase;
    color: #f4d995;
    text-align: center;
  }

  .subtitle {
    text-align: center;
    margin: 0 auto 2.4rem;
    max-width: 820px;
    line-height: 1.6;
    color: rgba(217, 193, 124, 0.82);
    font-size: clamp(1rem, 2.6vw, 1.08rem);
    padding: 0 0.5rem;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: clamp(1rem, 2vw, 1.4rem);
  }

  @media (max-width: 600px) {
    .grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
  }

  .tile {
    position: relative;
    padding: clamp(1.4rem, 3vw, 1.8rem) clamp(1.2rem, 2.8vw, 1.6rem)
      clamp(1.6rem, 3vw, 2rem);
    border: 1px solid rgba(217, 193, 124, 0.35);
    border-radius: 14px;
    background: linear-gradient(140deg, rgba(52, 26, 6, 0.4), rgba(10, 8, 4, 0.72));
    color: inherit;
    text-decoration: none;
    transition: transform 0.35s ease, box-shadow 0.35s ease, border-color 0.35s ease;
    overflow: hidden;
    isolation: isolate;
  }

  .tile:hover {
    transform: translateY(-8px);
    border-color: rgba(244, 217, 149, 0.7);
    box-shadow: 0 14px 28px rgba(0, 0, 0, 0.45), 0 0 22px rgba(244, 217, 149, 0.22);
  }

  .tile::after {
    content: "";
    position: absolute;
    inset: -40% 10% 50% 10%;
    background: radial-gradient(circle, rgba(217, 193, 124, 0.18), transparent 55%);
    opacity: 0;
    transition: opacity 0.4s ease;
    z-index: -1;
  }

  .tile:hover::after {
    opacity: 1;
  }

  .tile h2 {
    margin: 0 0 0.45rem;
    font-size: 1.32rem;
    letter-spacing: 0.12rem;
    text-transform: uppercase;
    color: #f8e4b5;
  }

  .tile p {
    margin: 0;
    color: rgba(217, 193, 124, 0.82);
    line-height: 1.55;
  }

  .meta {
    margin-top: 2.8rem;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    color: rgba(217, 193, 124, 0.75);
    font-size: clamp(0.92rem, 2vw, 1rem);
    flex-wrap: wrap;
  }

  .sigil {
    text-align: center;
    font-size: 1.9rem;
    filter: drop-shadow(0 0 12px rgba(244, 217, 149, 0.35));
  }

  @media (max-width: 700px) {
    .vault-shell {
      padding: 2.2rem 1.6rem 2.8rem;
      margin: 2rem 0.75rem;
    }

    h1 {
      font-size: clamp(1.8rem, 8vw, 2.6rem);
      letter-spacing: 0.08rem;
    }

    .subtitle {
      font-size: 1rem;
      line-height: 1.5;
    }

    .crest {
      font-size: 0.75rem;
      letter-spacing: 0.2rem;
      text-align: center;
    }

    .tile h2 {
      font-size: 1.15rem;
    }

    .tile p {
      font-size: 0.95rem;
    }

    .meta {
      justify-content: center;
      flex-wrap: wrap;
    }

    .sigil {
      font-size: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .void {
      padding: 1rem 0.5rem;
      align-items: stretch;
    }

    .vault-shell {
      padding: 1.5rem 1rem 2rem;
      margin: 1.5rem 0.5rem;
    }

    h1 {
      margin: 0.5rem 0 0.5rem;
      letter-spacing: 0.04rem;
    }

    .subtitle {
      margin-bottom: 1.5rem;
      padding: 0;
      font-size: 0.98rem;
    }

    .tile h2 {
      font-size: 1.08rem;
      letter-spacing: 0.08rem;
    }

    .tile p {
      font-size: 0.93rem;
    }

    .meta {
      font-size: 0.95rem;
    }
  }
</style>