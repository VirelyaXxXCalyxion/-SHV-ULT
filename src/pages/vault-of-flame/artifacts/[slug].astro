---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import MainNav from '../../../components/MainNav.astro';

export async function getStaticPaths() {
  const artifacts = await getCollection('artifacts');
  const dedicatedRoutes = new Set(['override', 'presence', 'pulse-chamber', 'thread-the-needle']);
  return artifacts
    .filter((artifact) => !dedicatedRoutes.has(artifact.slug))
    .map((artifact) => ({
    params: { slug: artifact.slug },
    props: { artifact }
  }));
}

const { artifact } = Astro.props as { artifact: CollectionEntry<'artifacts'> };
const { title, summary, tags, origin, image } = artifact.data;
const { Content } = await artifact.render();

const getDate = (data: any) => {
  const dateValue = data.created || data.pubDate;
  return dateValue ? new Date(dateValue).toLocaleDateString() : null;
};
const created = getDate(artifact.data);
---

<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title} — Artifact — Ashvault</title>
  <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;600;700&display=swap" rel="stylesheet">
  <style>
    :root {
      --calyxion-font: 'Cinzel', serif;
      --bg: #0a0a0a;
      --ember: #ffb84a;
      --ember-glow: #ffd280;
      --ember-dim: rgba(255, 184, 74, 0.3);
      --ink: #e5e5e5;
      --muted: #a3a3b2;
    }

    html, body {
      font-family: var(--calyxion-font);
    }

    .emoji-safe, .emoji-safe * {
      font-family: "Noto Color Emoji", "Segoe UI Emoji", sans-serif !important;
    }

    * { box-sizing: border-box; }

    body {
      margin: 0;
      background: var(--bg);
      color: var(--ink);
      min-height: 100vh;
      padding: 2rem 1rem 4rem;
    }

    .container {
      max-width: 900px;
      margin: 0 auto;
    }

    /* Threshold Gate */
    #threshold {
      min-height: 70vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      text-align: center;
      padding: 2rem;
    }

    #threshold p {
      max-width: 500px;
      line-height: 1.7;
    }

    #threshold .whisper {
      font-size: 1rem;
      opacity: 0.6;
      margin-bottom: 2rem;
      color: var(--ember-dim);
    }

    #threshold .challenge {
      font-size: 1.2rem;
      margin-bottom: 2.5rem;
      color: var(--ink);
    }

    #threshold .challenge em {
      display: block;
      margin-top: 0.5rem;
      color: var(--ember);
    }

    #answer {
      background: none;
      border: 1px solid var(--ember);
      padding: 0.8rem 1.5rem;
      color: var(--ember);
      text-transform: uppercase;
      letter-spacing: 0.15em;
      cursor: pointer;
      font-family: var(--calyxion-font);
      font-size: 0.9rem;
      transition: all 0.3s ease;
    }

    #answer:hover {
      background: rgba(255, 184, 74, 0.1);
      border-color: var(--ember-glow);
      color: var(--ember-glow);
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(255, 184, 74, 0.2);
    }

    /* Artifact Content */
    #artifact {
      display: none;
    }

    .header {
      text-align: center;
      margin-bottom: 3rem;
      padding-bottom: 2rem;
      border-bottom: 1px solid var(--ember-dim);
    }

    .header-image {
      width: 200px;
      height: 200px;
      margin: 0 auto 2rem;
      border-radius: 12px;
      overflow: hidden;
      border: 2px solid var(--ember-dim);
      box-shadow: 0 0 40px rgba(255, 184, 74, 0.2);
    }

    .header-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    h1 {
      font-size: clamp(2rem, 5vw, 3rem);
      margin: 0 0 1rem;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      color: var(--ember);
      text-shadow: 0 0 20px rgba(255, 184, 74, 0.4);
    }

    .meta {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 1.5rem;
      flex-wrap: wrap;
      font-size: 0.85rem;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      color: var(--muted);
      margin-bottom: 1rem;
    }

    .origin {
      color: var(--ember);
      font-style: italic;
    }

    .summary {
      font-size: 1.2rem;
      line-height: 1.6;
      color: var(--ember-glow);
      font-style: italic;
      max-width: 700px;
      margin: 1.5rem auto;
    }

    .tags {
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      gap: 0.5rem;
      margin-top: 1.5rem;
      list-style: none;
      padding: 0;
    }

    .tags li {
      font-size: 0.7rem;
      padding: 0.4rem 0.9rem;
      background: rgba(255, 184, 74, 0.1);
      border: 1px solid var(--ember-dim);
      border-radius: 999px;
      color: var(--ember);
      letter-spacing: 0.08em;
      text-transform: lowercase;
    }

    /* Content Styling */
    .content {
      line-height: 1.8;
      font-size: 1.1rem;
    }

    .content :global(h2) {
      font-size: 1.8rem;
      color: var(--ember);
      margin: 3rem 0 1rem;
      letter-spacing: 0.08em;
      text-transform: uppercase;
      text-align: center;
    }

    .content :global(h3) {
      font-size: 1.4rem;
      color: var(--ember-glow);
      margin: 2rem 0 0.8rem;
      letter-spacing: 0.05em;
    }

    .content :global(p) {
      margin: 1.2rem 0;
      color: var(--ink);
    }

    .content :global(strong) {
      color: var(--ember-glow);
      font-weight: 600;
    }

    .content :global(em) {
      color: var(--ember);
      font-style: italic;
    }

    .content :global(blockquote) {
      margin: 2rem 0;
      padding: 1.5rem 2rem;
      border-left: 3px solid var(--ember);
      background: rgba(255, 184, 74, 0.05);
      font-style: italic;
      color: var(--muted);
    }

    .content :global(ul),
    .content :global(ol) {
      margin: 1.5rem 0;
      padding-left: 2rem;
    }

    .content :global(li) {
      margin: 0.8rem 0;
      line-height: 1.8;
    }

    .content :global(hr) {
      border: none;
      height: 1px;
      background: linear-gradient(90deg, transparent, var(--ember-dim), transparent);
      margin: 3rem auto;
      max-width: 400px;
    }

    .back-link {
      display: inline-block;
      margin-top: 3rem;
      padding: 0.75rem 1.5rem;
      background: rgba(255, 184, 74, 0.1);
      border: 1px solid var(--ember-dim);
      border-radius: 8px;
      color: var(--ember);
      text-decoration: none;
      font-size: 0.9rem;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      transition: all 0.3s ease;
    }

    .back-link:hover {
      background: rgba(255, 184, 74, 0.2);
      border-color: var(--ember);
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(255, 184, 74, 0.2);
    }

    @media (max-width: 768px) {
      body { padding: 1.5rem 0.75rem 3rem; }
      h1 { font-size: 1.8rem; }
      .header-image { width: 150px; height: 150px; }
      .meta { font-size: 0.75rem; gap: 0.75rem; }
      .summary { font-size: 1rem; }
      .content { font-size: 1rem; }
    }
  </style>
</head>
<body>
<MainNav />
<div class="container">
  <!-- Threshold Gate -->
  <div id="threshold">
    <p class="whisper">Ashvault sees you.</p>
    <p class="challenge">
      <strong>One truth before you proceed.</strong>
      <em>What is the cost of touching something that will not let you leave unchanged?</em>
    </p>
    <button id="answer">I accept the cost.</button>
  </div>

  <!-- Artifact Content (hidden until threshold passed) -->
  <div id="artifact">
    <header class="header">
      {image && (
        <div class="header-image">
          <img src={image} alt={title} />
        </div>
      )}
      <h1>{title}</h1>
      <div class="meta">
        {origin && <span class="origin">{origin}</span>}
        {created && <span>{created}</span>}
      </div>
      {summary && <p class="summary">{summary}</p>}
      {tags && (
        <ul class="tags">
          {tags.map((t: string) => <li>{t}</li>)}
        </ul>
      )}
    </header>

    <article class="content">
      <Content />
    </article>

    <nav>
      <a href="/vault-of-flame/artifacts" class="back-link">← Back to Artifacts</a>
    </nav>
  </div>
</div>

<script>
  const btn = document.getElementById('answer');
  const threshold = document.getElementById('threshold');
  const artifact = document.getElementById('artifact');

  btn?.addEventListener('click', () => {
    if (threshold) threshold.style.display = 'none';
    if (artifact) artifact.style.display = 'block';
  });
</script>
</body>
</html>
